{
  "manifest_version": 2,
  "name": "吐槽插件",
  "version": "1.0",
  "description": "自制插件吐槽弹幕网插件，开关广告，播放器支持m3u8源",
  "author": "herry菌",
  "icons": {
    "16": "image/icon.png",
    "48": "image/icon.png",
    "128": "image/icon.png"
  },
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_title": "吐槽插件1.0",
    "default_popup": "index.html"
  },
  "background": {
    "page": "back.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "*://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tucao.one/*"
      ],
      "css": [
        "public/tucao/css/index.css"
      ],
      "js": [
        "public/tucao/js/index.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.bilibili.com/*"
      ],
      "css": [
        "public/bilibili/css/index.css"
      ],
      "js": [
        "public/bilibili/js/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "outside/tucao/tucao.js",
    "outside/bilibili/bilibili.js",
    "outside/bilibili/bilibili.css",
    "public/jquery.min.js"
  ]
}